<?xml version="1.0" encoding="utf-8"?>
<manifest package="igy.com.assistantchat"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="igy.com.assistantchat.misc.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="igy.com.assistantchat.login_ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="igy.com.assistantchat.connection_ui.ConnectionActivity">
        </activity>
        <activity android:name="igy.com.assistantchat.chat_ui.ChatActivityLastMsg">

        </activity>

        <activity android:name="igy.com.assistantchat.chat_ui.ChatActivity">

        </activity>
    </application>

</manifest>
